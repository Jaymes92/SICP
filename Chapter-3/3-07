#lang sicp
;Modify solution 3.03 to add a password checking procedure.
;Add it to dispatch to allow it to be externally called.
(define (make-account balance password)
  (define (withdraw amount)
    (if (>= balance amount)
        (begin (set! balance (- balance amount))
               balance)
        "Insufficient funds"))
  (define (deposit amount)
    (set! balance (+ balance amount))
    balance)
  (define (correct-password? pw)
    (eq? pw password))
  (define (dispatch pw m)
    (cond ((not (correct-password? pw))
           (display "Incorrect password")
           (lambda (x) (newline)))
          ((eq? m 'correct-password?) correct-password?)
          ((eq? m 'withdraw) withdraw)
          ((eq? m 'deposit) deposit)
          (else (error "Uknown request -- MAKE-ACCOUNT " m))))
  dispatch)

